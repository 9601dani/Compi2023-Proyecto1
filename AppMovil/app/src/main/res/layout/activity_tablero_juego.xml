<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableroJuego">

    <TextView
        android:id="@+id/txt_world_name"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:text="@string/string_paint_world"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="387dp"
        android:layout_height="283dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_world_name">

    </FrameLayout>

    <EditText
        android:id="@+id/text_mov"
        android:layout_width="370dp"
        android:layout_height="223dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:hint="@string/string_mov"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <Button
        android:id="@+id/button_report_ope"
        android:layout_width="79dp"
        android:layout_height="51dp"
        android:text="@string/button_report_op_mov"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_mov"
        app:layout_constraintVertical_bias="0.26" />

    <Button
        android:id="@+id/button_compile_mov"
        android:layout_width="75dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="@string/button_analizar"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_report_ope"
        app:layout_constraintTop_toBottomOf="@+id/text_mov"
        app:layout_constraintVertical_bias="0.239" />

    <Button
        android:id="@+id/button_report_mov"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/report_mov"
        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/button_compile_mov"
        app:layout_constraintTop_toBottomOf="@+id/text_mov" />

    <Button
        android:id="@+id/button_jugar"
        android:layout_width="94dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/button_compile_mov"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/button_report_mov"
        app:layout_constraintTop_toBottomOf="@+id/text_mov" />

</androidx.constraintlayout.widget.ConstraintLayout>